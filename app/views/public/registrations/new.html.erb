<div class="container">

  <div class="row pt-3 pb-3">
    <h4><span>新規会員登録</span></h4>
  </div>

  <%= form_with model: @customer, url: '/customer', local: true do |f| %>
    <div class="row">
      <%= f.label "氏名", class: 'w-25 p-3' %>
      <%= f.label "（姓）", class: 'col-1' %>
      <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name", class: 'form-control col-3' %>
      <%= f.label "（名）", class: 'col-1' %>
      <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name", class: 'form-control col-3' %>
    </div>

    <div class="row">
      <%= f.label "フリガナ", class: 'w-25 p-3' %>
      <%= f.label "（セイ）" %>
      <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana", class: 'form-control col-3' %>
      <%= f.label "（メイ）" %>
      <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana", class: 'form-control col-3' %>
    </div>

    <div class="row">
      <%= f.label "email", class: 'w-25 p-3' %>
      <%= f.text_field :email, autofocus: true, autocomplete: "email", class: 'form-control col-3' %>
    </div>

    <div class="row">
      <%= f.label "郵便番号(ハイフンなし)", class: 'w-25 p-3' %>
      <%= f.number_field :postal_code, autofocus: true, autocomplete: "postal_code", class: 'form-control col-3' %>
    </div>

    <div class="row">
      <%= f.label "住所", class: 'w-25 p-3' %>
      <%= f.text_field :address, autofocus: true, autocomplete: "address", class: 'form-control col-3' %>
    </div>

    <div class="row">
      <%= f.label "電話番号(ハイフンなし)", class: 'w-25 p-3' %>
      <%= f.number_field :telephone_number, autofocus: true, autocomplete: "telephone", class: 'form-control col-3' %>
    </div>

    <div class="row">
      <%= f.label "パスワード(6文字以上)", class: 'w-25 p-3' %>
      <%= f.password_field :password, autocomplete: "new-password", class: 'form-control col-3' %>
    </div>

    <div class="row">
      <%= f.label "パスワード(確認用)", class: 'w-25 p-3' %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control col-3' %>
    </div>

    <div class="actions">
      <%= f.submit "新規登録" %>
    </div>

  <% end %>

  <div class="row pt-3 pb-3">
    <h4><span>既に登録済みの方</span></h4>
  </div>

  <div class="row pt-3 pb-3">
    <%= link_to "こちら", new_customer_session_path %>　からログインしてください。
  </div>


</div>