<div class="container">
  <div class="row justify-content-center">
    <div class="col-9 mb-3">
      <span class="h4 bg-light">　新規会員登録　</span>
    </div>
  </div>

  <!--バリデーションチェックの結果をエラーメッセージで表示-->
  <div class="row group" style="font-size: 20px; color: red;">
    <% if @customer.errors.any? %>
      <%= @customer.errors.count %>件のエラーがあります!
      <ul>
        <%@customer.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    <% end %>
  </div>

  <div class="form-horizontal" role="form">
    <%= form_with model: @customer, url: '/customer', local: true do |f| %>

      <div class="form-group row">
        <div class="col-sm-3">
          <%= f.label "氏名", class: 'control-label' %>
        </div>
        <div class="col-sm-1">
          <%= f.label :last_name, "(姓)", class: 'control-label' %>
        </div>
        <div class="col-sm-2">
          <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name", class: 'form-control' %>
        </div>
        <div class="col-sm-1">
          <%= f.label :first_name, "（名）", class: 'control-label' %>
        </div>
        <div class="col-sm-2">
          <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name", class: 'form-control' %>
        </div>
      </div>

      <div class="form-group row">
        <div class="col-sm-3">
          <%= f.label "フリガナ", class: 'control-label' %>
        </div>
        <div class="col-sm-1">
          <%= f.label :last_name_kana, "(セイ)", class: 'control-label' %>
        </div>
        <div class="col-sm-2">
          <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "first_name_kana", class: 'form-control' %>
        </div>
        <div class="col-sm-1">
          <%= f.label :first_name_kana, "(メイ)", class: 'control-label' %>
        </div>
        <div class="col-sm-2">
          <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana", class: 'form-control' %>
        </div>
      </div>

      <div class="form-group row">
        <div class="col-sm-3">
          <%= f.label :email, "メールアドレス", class: 'control-label' %>
        </div>
        <div class="col-sm-4">
          <%= f.text_field :email, autofocus: true, autocomplete: "email", class: 'form-control' %>
        </div>
      </div>

      <div class="form-group row">
        <div class="col-sm-3">
          <%= f.label :postal_code, "郵便番号(ハイフンなし)", class: 'control-label' %>
        </div>
        <div class="col-sm-2">
          <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code", class: 'form-control' %>
        </div>
      </div>

      <div class="form-group row">
        <div class="col-sm-3">
          <%= f.label :address, "住所", class: 'control-label' %>
        </div>
        <div class="col-sm-5">
          <%= f.text_field :address, autofocus: true, autocomplete: "address", class: 'form-control' %>
        </div>
      </div>

      <div class="form-group row">
        <div class="col-sm-3">
          <%= f.label :telephone_number, "電話番号(ハイフンなし)", class: 'control-label' %>
        </div>
        <div class="col-sm-2">
          <%= f.text_field :telephone_number, autofocus: true, autocomplete: "telephone", class: 'form-control' %>
        </div>
      </div>

      <div class="form-group row">
        <div class="col-sm-3">
          <%= f.label :password, "パスワード(6文字以上)", class: 'control-label' %>
        </div>
        <div class="col-sm-3">
          <%= f.password_field :password, autocomplete: "new-password", class: 'form-control' %>
        </div>
      </div>

      <div class="form-group row">
        <div class="col-sm-3">
          <%= f.label :password_confirmation, "パスワード(確認用)", class: 'control-label' %>
        </div>
        <div class="col-sm-3">
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control' %>
        </div>
      </div>

      <div class="form-group row">
        <div class="col-sm-3">
          <%= f.submit "新規登録", class: 'btn btn-primary' %>
        </div>
      </div>

    <% end %>
  </div>


  <div class="pt-3 pb-3">
    <h5><span>既に登録済みの方</span></h5>
  </div>

  <div class="pt-3 pb-3">
    <%= link_to "こちら", new_customer_session_path %>　からログインしてください。
  </div>


</div>

<!--フッター-->
<%= render '/layouts/footer' %>