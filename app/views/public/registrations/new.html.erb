<div class="container w-50">
  
  <h4><span>新規会員登録</span></h4>
  
  <div class="row">
    
    <%= form_with model: @customer, url: '/customer', local: true do |f| %>
    
      <div class="field">
        <%= f.label "（姓）" %>
        <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name" %>
      </div>
    
      <div class="field">
        <%= f.label "（名）" %>
        <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name" %>
      </div>
    
      <div class="field">
        <%= f.label "（セイ）" %>
        <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana" %>
      </div>
    
      <div class="field">
        <%= f.label "（メイ）" %>
        <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana" %>
      </div>
    
      <div class="field">
        <%= f.label "email" %>
        <%= f.text_field :email, autofocus: true, autocomplete: "email" %>
      </div>
    
      <div class="field">
        <%= f.label "郵便番号(ハイフンなし)" %>
        <%= f.number_field :postal_code, autofocus: true, autocomplete: "postal_code" %>
      </div>
    
      <div class="field">
        <%= f.label "住所" %>
        <%= f.text_field :address, autofocus: true, autocomplete: "address" %>
      </div>
    
        <div class="field">
        <%= f.label "電話番号(ハイフンなし)" %>
        <%= f.number_field :telephone_number, autofocus: true, autocomplete: "telephone" %>
      </div>
    
      <div class="field">
        <%= f.label :password %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %>
        <%= f.password_field :password, autocomplete: "new-password" %>
      </div>
    
      <div class="field">
        <%= f.label :password_confirmation %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </div>
    
      <div class="actions">
        <%= f.submit "新規登録" %>
      </div>
    <% end %>
    
  </div>
  
  <div class="row">
  <h4><span>既に登録済みの方</span></h4>
  
    <div class="col">
    <%= render "devise/shared/links" %>からログインしてください。
    </div>
  </div>

</div>