<div class="container w-50">
  <div class="row">
    <div class="col-md-11">
      <h4><span>　マイページ　</span></h4>
    </div>
  </div>
  
  <div class="row m-3">
    <p class="font-weight-bold mr-5 w-25">登録情報</p>
    <%= link_to "編集する", edit_customers_path, class: 'btn btn-success' %>
  </div>
  
  <div class="row">
    <div class="col">
      <table class="table table table-bordered">
        <tr>
          <th class="table-active">氏名</th>
          <td><%= @customer.last_name %><%= @customer.first_name %></td>
        </tr>
        <tr>
          <th class="table-active">カナ</th>
          <td><%= @customer.last_name_kana %><%= @customer.first_name_kana %></td>
        </tr>
        <tr>
          <th class="table-active">郵便番号</th>
          <td><%= @customer.postal_code %></td>
        </tr>
        <tr>
          <th class="table-active">住所</th>
          <td><%= @customer.address %></td>
        </tr>
        <tr>
          <th class="table-active">電話番号</th>
          <td><%= @customer.telephone_number %></td>
        </tr>
        <tr>
          <th class="table-active">メールアドレス</th>
          <td><%= @customer.email %></td>
        </tr>
      </table>
    </div>
  </div>
    
  <div class="row m-3">
    <p class="font-weight-bold mr-5 w-25">配送先</p>
    <%= link_to "一覧を見る", addresses_path, class: 'btn btn-primary' %>
  </div>

  <div class="row m-3">
    <p class="font-weight-bold mr-5 w-25">注文履歴</p>
    <%= link_to "一覧を見る", orders_path, class: 'btn btn-primary' %>
  </div>

</div>