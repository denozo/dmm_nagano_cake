<div class="container">
  <div class="row pt-3 pb-3">
    <h4><span>会員情報編集</span></h4>
  </div>

  <div class="row group" style="font-size: 20px; color: red;">
    <% if @customer.errors.any? %>
      <%= @customer.errors.count %>件の未入力があります!
    <% end %>
  </div>

  <%= form_with model: @customer, url: customers_path, local: true do |f| %>

  <div class="row form-group">
    <div class="col-md-3">
      <%= f.label "氏名" %>
    </div>
    <div class="col-md-3 mr-3">
      <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name", class: 'form-control' %>
    </div>
    <div class="col-md-3 mr-3">
      <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name", class: 'form-control' %>
    </div>
  </div>

  <div class="row form-group">
    <div class="col-md-3">
      <%= f.label "フリガナ" %>
    </div>
    <div class="col-md-3 mr-3">
      <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana", class: 'form-control' %>
    </div>
    <div class="col-md-3 mr-3">
      <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana", class: 'form-control' %>
    </div>
  </div>

  <div class="row form-group">
    <div class="col-md-3">
      <%= f.label :postal_cod, "郵便番号" %>
    </div>
    <div class="col-md-3 mr-3">
      <%= f.number_field :postal_code, autofocus: true, autocomplete: "postal_code", class: 'form-control' %>
    </div>
  </div>

  <div class="row form-group">
    <div class="col-md-3">
      <%= f.label :address, "住所" %>
    </div>
    <div class="col-md-7">
      <%= f.text_field :address, autofocus: true, autocomplete: "address", class: 'form-control' %>
    </div>
  </div>

  <div class="row form-group">
    <div class="col-md-3">
      <%= f.label :telephone_number, "電話番号" %>
    </div>
    <div class="col-md-3">
      <%= f.number_field :telephone_number, autofocus: true, autocomplete: "telephone", class: 'form-control' %>
    </div>
  </div>

  <div class="row form-group">
    <div class="col-md-3">
      <%= f.label :email, "メールアドレス" %>
    </div>
    <div class="col-md-4">
      <%= f.text_field :email, autofocus: true, autocomplete: "email", class: 'form-control' %>
    </div>
  </div>

<div class="row">
  <div class="col">
    <%= f.submit "編集内容を保存", class: "btn btn-success" %>
  </div>
  <div class="col">
    <%= link_to "退会する", unsubscribe_customers_path, class: "btn btn-danger" %>
    <% end %>
  </div>
</div>


</div>