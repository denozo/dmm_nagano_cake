<h2>会員情報編集</h2>

<%= form_with model: @customer, url: customers_path, local: true do |f| %>
  
  <div class="field">
    <%= f.label "（姓）" %><br />
    <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name" %>
  </div>
  
  <div class="field">
    <%= f.label "（名）" %><br />
    <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name" %>
  </div>
  
  <div class="field">
    <%= f.label "（セイ）" %><br />
    <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana" %>
  </div>
  
  <div class="field">
    <%= f.label "（メイ）" %><br />
    <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana" %>
  </div>
  
  <div class="field">
    <%= f.label "メールアドレス" %><br />
    <%= f.text_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label "郵便番号(ハイフンなし)" %><br />
    <%= f.number_field :postal_code, autofocus: true, autocomplete: "postal_code" %>
  </div>
  
  <div class="field">
    <%= f.label "住所" %><br />
    <%= f.text_field :address, autofocus: true, autocomplete: "address" %>
  </div>
  
  <div class="field">
    <%= f.label "電話番号(ハイフンなし)" %><br />
    <%= f.number_field :telephone_number, autofocus: true, autocomplete: "telephone" %>
  </div>
  
    
  <div>
    <label>会員ステータス</label>
    <%= f.radio_button :is_active, "有効" %>
    <%= f.label :is_active, "有効" %>    
    
    <%= f.radio_button :is_active, "退会" %>
    <%= f.label :is_active, "退会" %>
  </div>
  

  <div class="actions">
    <%= f.submit "編集内容を保存" %>
    
  </div>
<% end %>
