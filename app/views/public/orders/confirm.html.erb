 <div class="container">

  <div class="row">
    <div class="row pt-3 pb-3">
      <h4><span>　注文情報確認　</span></h4>
    </div>
  </div>

  <div class="row">
    <div class="col-md-9">
      <table class="table table-bordered">
        <thead>
          <tr class="table-active">
            <th>商品名</th>
            <th>単価（税込）</th>
            <th>数量</th>
            <th>小計</th>
          </tr>
        </thead>
        <tbody>
          <% @cart_items.each do |cart_item| %>
          <tr>
            <td><%= attachment_image_tag cart_item.item, :image, :fill, 40, 30 %>　<%= cart_item.item.name %></td>
            <td><%= cart_item.item.with_tax_price.to_s(:delimited) %></td>
            <td><%= cart_item.amount %></td>
            <td><%= cart_item.subtotal.to_s(:delimited) %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <div class="col-md-3">
      <table class="table table-bordered">
        <tr>
          <th class="table-secondary">送料</th>
          <td>800</td>
        </tr>
        <tr>
          <th class="table-secondary">商品合計</th>
          <td><%= @sum.to_s(:delimited) %></td>
        </tr>
        <tr>
          <th class="table-secondary">請求金額</th>
          <td><%= @total_payment.to_s(:delimited) %></td>
        </tr>
      </table>
    </div>
  </div>

  <div class="row">
    <div class="col-md-2 font-weight-bold">
      <p>支払方法</p>
    </div>
    <div class="col">
      <%= @order.payment_method_i18n %>
    </div>
  </div>

  <div class="row">
    <div class="col-md-2 font-weight-bold">
      <p>お届け先</p>
    </div>
    <div class="col">
      〒<%= @order.postal_code %>　<%= @order.address %></br>
      <%= @order.name %>
    </div>
  </div>

  <%= form_with model: @order, url: '/orders', method: :post, local: true do |f| %>
    <%= f.hidden_field :customer_id, value: @order.customer_id %>
    <%= f.hidden_field :postal_code, value: @order.postal_code %>
    <%= f.hidden_field :address, value: @order.address %>
    <%= f.hidden_field :name, value: @order.name %>
    <%= f.hidden_field :payment_method, value: @order.payment_method %>
    <%= f.hidden_field :shipping_cost, value: @order.shipping_cost %>
    <%= f.hidden_field :total_payment, value: @order.total_payment %>
    <div class="row justify-content-center m-5">
        <%= f.submit '注文を確定する', class: "btn btn-success" %>
    </div>
  <% end %>

 </div>
