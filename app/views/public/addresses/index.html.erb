<div class="row">
  <h4><span>　配送先一覧　</span></h4>
</div>

<%= form_with model: @address, url: addresses_path, local:true do |f| %>


<label>宛名</label>
<%= f.text_field :name %>
</div>

<label>郵便番号</label>
<%= f.text_field :postal_code %>
</div>

<label>住所</label>
<%= f.text_field :address %>
</div>

<%= f.submit '新規登録' %>

<% end %>


<table>
  <thead>
    <tr>
      <th>郵便番号</th>
      <th>住所</th>
      <th>宛名</th>
    </tr>
  </thead>
  <tbody>
    <% @addresses.each do |addresslist| %>
    <tr>
      <td><%= addresslist.postal_code %></td>
      <td><%= addresslist.address %></td>
      <td><%= addresslist.name %></td>
      <td></td>
      <td></td>
    </tr>
    <% end %>
  </tbody>
</table>