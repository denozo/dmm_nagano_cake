<div class="row">
  <h4><span>　配送先一覧　</span></h4>
</div>

<%= form_with model: @address, url: addresses_path, local:true do |f| %>


<label>宛名</label>
<%= f.text_field :name %>
</div>

<label>郵便番号</label>
<%= f.text_field :postal_code %>
</div>

<label>住所</label>
<%= f.text_field :address %>
</div>

<%= f.submit '新規登録' %>

<% end %>


<table>
  <thead>
    <tr>
      <th>郵便番号</th>
      <th>住所</th>
      <th>宛名</th>
      <td colspan="2"></td>
    </tr>
  </thead>
  <tbody>
    <% @addresses.each do |address| %>
    <tr>
      <td><%= address.postal_code %></td>
      <td><%= address.address %></td>
      <td><%= address.name %></td>
      <td><%= link_to "編集する", edit_address_path(address.id) %></td>
      <td><%= link_to "削除する", address_path(address.id), class: 'Destroy', method: :delete, "data-confirm" => "宛名を削除しますか？"  %></td>
      
      <td></td>
      <td></td>
    </tr>
    <% end %>
  </tbody>
</table>