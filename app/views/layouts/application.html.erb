<!DOCTYPE html>
<html>
  <head>
    <title>NaganoCake</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <script src="https://kit.fontawesome.com/*******.js" crossorigin="anonymous"></script>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link href="https://use.fontawesome.com/releases/v5.6.1/css/all.css" rel="stylesheet">
  </head>

  <header>
    <div class="container">
      <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <a class="navbar-brand" href="/"><span>ながのCAKE</span></a>
          <!--ログイン時に会員名を表示-->
          <div class="p-3">
            <% if customer_signed_in? %>
            <p>ようこそ！<%= current_customer.last_name + "さん" %></p>
            <% else %>
            <% end %>
          </div>

          <ul class="navbar-nav">
            <% if admin_signed_in? %>
              <li class="nav-item">
                <%= link_to "商品一覧", admin_items_path, class: 'btn btn-outline-secondary' %>
              </li>
              <li class="nav-item">
                <%= link_to "会員一覧", admin_customers_path, class: 'btn btn-outline-secondary'  %>
              </li>
              <li class="nav-item">
                <%= link_to "注文履歴一覧", admin_root_path, class: 'btn btn-outline-secondary'  %>
              </li>
              <li class="nav-item">
                <%= link_to "ジャンル一覧", admin_genres_path, class: 'btn btn-outline-secondary'  %>
              </li>
              <li class="nav-item">
                <%= link_to "ログアウト", destroy_admin_session_path, method: :delete, class: 'btn btn-outline-secondary' %>
              </li>

            <% elsif customer_signed_in? %>
              <li class="nav-item">
                <%= link_to "マイページ", customers_path, class: 'btn btn-outline-secondary' %>
              </li>
              <li class="nav-item">
                <%= link_to "商品一覧", items_path, class: 'btn btn-outline-secondary' %>
              </li>
              <li class="nav-item">
                <%= link_to "カート", cart_items_path, class: 'btn btn-outline-secondary' %>
              </li>
              <li class="nav-item">
                <%= link_to "ログアウト", destroy_customer_session_path, method: :delete, class: 'btn btn-outline-secondary' %>
              </li>
            <% else %>
              <li class="nav-item">
                <%= link_to "About", home_about_path, class: 'btn btn-outline-secondary' %>
              </li>
             <li class="nav-item">
                <%= link_to "商品一覧", items_path, class: 'btn btn-outline-secondary' %>
              </li>
              <li class="nav-item">
                <%= link_to "新規登録", new_customer_registration_path, class: 'btn btn-outline-secondary' %>
              </li>
              <li class="nav-item">
                <%= link_to "ログイン", new_customer_session_path, class: 'btn btn-outline-secondary' %>
              </li>
            <% end %>
          </ul>
      </div>
    </div>
    <div class="row justify-content-end">
      <!--adminでログインしているときの検索窓-->
      <%= form_tag(admin_items_path,:method => 'get') do %>
        <%= text_field_tag :search %>
        <%= submit_tag 'Search', :name => nil %>
      <% end %>
      <!--会員でログインしているときの検索窓-->
      <%= form_tag(items_path,:method => 'get') do %>
        <%= text_field_tag :search %>
        <%= submit_tag 'Search', :name => nil %>
      <% end %>
    </div>
    </nav>
  </header>
    <%= yield %>
</html>