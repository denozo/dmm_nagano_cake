<div class="container w-50">
  
  <div class="row">
    <div class="col-md-12">
      <h4><span>　会員一覧　</span></h4>
    </div>
  </div>

  <div class="row">
    <table class="table">
      <thead>
        <tr class="table-light">
          <th class="col-1">会員ID</th>
          <th class="col-2">氏名</th>
          <th class="col-4">メールアドレス</th>
          <th class="col-2">ステータス</th>
        </tr>
      </thead>
      <tbody  class="table-hover">
        <% @customers.each do |customer| %>
        <tr>
          <td><%= customer.id %></td>
          <td><%= link_to customer.last_name + customer.first_name, admin_customer_path(customer.id), class: 'item-link' %></td>
          <td><%= customer.email %></td>
          <td><%= customer.is_active_i18n %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  
  <div class="row justify-content-center">
    <%= paginate(@customers) %>
  </div>  

</div>