<div class="container">
  <div class="row justify-content-center">
    <div class="col-9 mb-3">
      <span class="h4 bg-light">　会員情報編集　</span>
    </div>
  </div>

  <!--会員情報編集フィールドの設置-->
  <%= form_with model: @customer, url: admin_customer_path, local: true do |f| %>
  
    <div class="row">
      <%= f.label "氏名", class: 'col-md-2 p-2' %>
        <div class="col-md-3 mr-3">
          <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name", class: 'form-control' %>
        </div>
        <div class="col-md-3">
          <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name", class: 'form-control' %>
        </div>
    </div>
  
    <div class="row">
      <%= f.label "フリガナ", class: 'col-md-2 p-2' %>
      <div class="col-md-3 mr-3">
        <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana", class: 'form-control' %>
      </div>
      <div class="col-md-3 mr-3">
        <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana", class: 'form-control' %>
      </div>
    </div>

    <div class="row">
      <%= f.label :postal_cod, "郵便番号", class: 'col-md-2 p-2' %>
      <div class="col-md-3 mr-3">
        <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code", class: 'form-control' %>
      </div>
    </div>
  
    <div class="row">
      <%= f.label :address, "住所", class: 'col-md-2 p-2' %>
      <div class="col-md-7">
        <%= f.text_field :address, autofocus: true, autocomplete: "address", class: 'form-control' %>
      </div>
    </div>
  
    <div class="row">
      <%= f.label :telephone_number, "電話番号", class: 'col-md-2 p-2' %>
      <div class="col-md-3">
        <%= f.text_field :telephone_number, autofocus: true, autocomplete: "telephone", class: 'form-control' %>
      </div>
    </div>
    
    <div class="row">
      <%= f.label :email, "メールアドレス", class: 'col-md-2 p-2' %>
      <div class="col-md-3">
        <%= f.text_field :email, autofocus: true, autocomplete: "email", class: 'form-control' %>
      </div>
    </div>
  
  
  
    <div class="row">
      <%= f.label :is_active, "会員ステータス", class: 'col-md-2 p-2' %>
      <div class="col-1 mr-5">
        <%= f.radio_button :is_active, 'active' %>
        <%= f.label :is_active, '有効' %>
      </div>
      <div class="col-1"> 
        <%= f.radio_button :is_active, 'withdraw' %>
        <%= f.label :is_active, '退会' %>
      </div>
    </div>
  
  
    <div class="row">
      <div class="col-md-2 ml-3"></div>
      <%= f.submit "編集内容を保存", class: 'btn btn-success' %>
    </div>
    
  <% end %>
  
</div>

<!--フッター-->
<%= render '/layouts/footer' %>