<div class="container">
  <div class="row justify-content-center">
    <div class="col-9 mb-3">
      <span class="h4 bg-light">　商品一覧　</span>
    </div>
    <div class="">
      <%= link_to "", new_admin_item_path, class: 'fas fa-plus-circle' %>
    </div>
  </div>

  <div class="row">
    <table class="table">
      <thead>
        <tr class="table-light">
          <th class="col-1">商品ID</th>
          <th class="col-5">商品名</th>
          <th class="col-2">税抜価格</th>
          <th class="col-2">ジャンル</th>
          <th class="col-3">ステータス</th>
        </tr>
      </thead>
      <tbody class="table-hover">
        <% @items.each do |item| %>
        <tr>
          <td><%= item.id %></td>
          <td><%= link_to item.name, admin_item_path(item.id), class: 'item-link' %></td>
          <td><%= item.price.to_s(:delimited) %></td>
          <td><%= item.genre.name %></td>
          <td><%= item.is_active %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <div class="row justify-content-center">
    <%= paginate(@items) %>
  </div>

</div>