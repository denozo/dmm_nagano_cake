<div class="container">
  <div class="row justify-content-light">
    <h4><span>　商品新規登録　</span></h4>
  </div>

  <div class="row justify-content-center">
    <%= form_with model: @item, url:"/admin/items", local:true do |f| %>
    
      <div class="row form-group">
        <label for="" class="col-sm-5 control-label">商品画像</label>
        <%= f.attachment_field :image, class: 'item_image' %>
      </div>
    
      <div class="row form-group">
        <label for="item_name" class="col-sm-5 control-label">商品名</label>
        <%= f.text_field :name, class: 'item_name col-sm-5' %>
      </div>
      
      <div class="row form-group">
        <label for="item_introduction" class="col-md-5 control-label">商品説明</label>
        <div>
        <%= f.text_area :introduction, class: "item_introduction col-md-7" %>
        </div>
      </div>
    
      <div class="row form-group">
        <label for="item_genre" class="col-sm-5 control-label">ジャンル</label>
        <%= f.collection_select :genre_id, Genre.all, :id, :name, include_blank: " -- 選択してください -- ", class: "item_genre" %>
      </div>
        <!--保存先のカラム名, テーブル名, DBに保存したいカラム名, 選択肢にするカラム名-->
      
      <div class="row form-group">
        <label for="item_price" class="col-sm-5 control-label">税抜価格</label>
        <%= f.number_field :price, class: "item_price col-sm-5" %>円
      </div>
    
      <div class="row form-group">
        <label for="item_is_active" class="col-sm-5 control-label">販売ステータス</label>
        <%= f.radio_button :is_active, "販売中", class: "item_is_active" %>
        <%= f.label :is_active, "販売中", class: "item_is_active" %>
    
        <%= f.radio_button :is_active, "販売停止中", class: "item_is_active" %>
        <%= f.label :is_active, "販売停止中", class: "item_is_active" %>
      </div>
    
    <div class="row justify-content-center">    
      <%= f.submit '新規登録' %>
    </div>   
    <% end %>
  </div>
</div>