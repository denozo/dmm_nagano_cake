<h1>商品新規登録</h1>

<%= form_with model: @item, url:"/admin/items", local:true do |f| %>

  <label>商品画像</label>
  <%= f.attachment_field :image %>
  </br>
  <label>商品名</label>
  <%= f.text_field :name %>
  </br>
  <label>商品説明</label>
  <%= f.text_area :introduction %>
  </br>
  <label>ジャンル</label>
  <%= f.collection_select :genre_id, Genre.all, :id, :name, include_blank: " -- 選択してください -- " %>
  <!--保存先のカラム名, テーブル名, DBに保存したいカラム名, 選択肢にするカラム名-->
  </br>
  <label>税抜価格</label>
  <%= f.text_field :price %>
  </br>
  <label>販売ステータス</label>
  </br>
  <label class="radio"><%= f.radio_button :is_active, "true" %>販売中</label>
  <label class="radio"><%= f.radio_button :is_active, "false" %>販売停止中</label>
  </br>  
  <%= f.submit '新規登録' %>

<% end %>