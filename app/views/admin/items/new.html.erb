<h1>商品新規登録</h1>

<%= form_with model: @item, url:"/admin/items", local:true do |f| %>

  <div>
    <label>商品画像</label>
    <%= f.attachment_field :image %>
  </div>

  <div>
    <label>商品名</label>
    <%= f.text_field :name %>
  </div>
  
  <div>
    <label>商品説明</label>
    <%= f.text_area :introduction %>
  </div>

  <div>
    <label>ジャンル</label>
    <%= f.collection_select :genre_id, Genre.all, :id, :name, include_blank: " -- 選択してください -- " %>
    <!--保存先のカラム名, テーブル名, DBに保存したいカラム名, 選択肢にするカラム名-->
  </div>
  
  <div>
    <label>税抜価格</label>
    <%= f.number_field :price %>
  </div>

  <div>
    <label>販売ステータス</label>
    <%= f.radio_button :is_active, "true" %>
    <%= f.label :is_active, "販売中" %>

    <%= f.radio_button :is_active, "false" %>
    <%= f.label :is_active, "販売停止中" %>
  </div>

  <%= f.submit '新規登録' %>

<% end %>