<div class="container">
  <div class="row justify-content-center">
    <div class="col-9 mb-3">
      <span class="h4 bg-light">　管理者ログイン　</span>
    </div>
  </div>

  <div class="form-horizontal" role="form">
    <%= form_with model: @admin, url: admin_session_path, local: true do |f| %>

    <div class="form-group row">
      <div class="col-6 col-md-2">
        <%= f.label "メールアドレス", class: 'control-label' %>
      </div>
      <div class="col-6 col-md-7">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", :placeholder => "sample@example.com", class: 'form-control' %>
      </div>
    </div>

    <div class="form-group row">
      <div class="col-6 col-md-2">
        <%= f.label "パスワード", class: 'control-label' %>
      </div>
      <div class="col-6 col-md-5">
        <%= f.password_field :password, autocomplete: "current-password", class: 'form-control' %>
      </div>
    </div>

    <div class="actions row justify-content-center">
        <%= f.submit "　ログイン　", class: 'btn btn-primary' %>
      </div>
    <% end %>
  </div>

</div>
