<div class="container w-50">
  <div class="row">
    <h4><span> 管理者ログイン </span></h4>
  </div>

  <div class="form-horizontal" role="form">
    <%= form_with model: @admin, url: admin_session_path, local: true do |f| %>

    <div class="form-group row">
      <div class="col-md-3">
        <%= f.label "メールアドレス", class: 'control-label' %>
      </div>
      <div class="col-md-7">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", :placeholder => "sample@example.com", class: 'form-control' %>
      </div>
    </div>

    <div class="form-group row">
      <div class="col-md-3">
        <%= f.label "パスワード", class: 'control-label' %>
      </div>
      <div class="col-md-5">
        <%= f.password_field :password, autocomplete: "current-password", class: 'form-control' %>
      </div>
    </div>

    <div class="actions">
        <%= f.submit "　ログイン　", class: 'btn btn-primary' %>
      </div>
    <% end %>
  </div>

</div>
