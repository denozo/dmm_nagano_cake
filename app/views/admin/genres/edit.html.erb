<div class="container">
  <div class="row">
    <div class="col^md-12">
      <h4><span>　ジャンル編集　</span></h4>
    </div>
  </div>
  
  <%= form_with model:@genre, url:"/admin/genres/#{@genre.id}", local:true do |f| %>
  <div class="form_group row w-50">
    <label for="genre_name" class="col-md-3">ジャンル名</label>
    <div class="col-md-7">
      <%= f.text_field :name, class: 'genre_name form-control', placeholder: 'ジャンル名' %>
    </div>
    <div class="col-md-2">
      <%= f.submit '変更を保存', class: 'btn btn-success' %>
    </div>
  <% end %>
  </div>
  
</div>