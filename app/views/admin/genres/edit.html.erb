<div class="container">
  <div class="row justify-content-center">
    <div class="col-9 mb-3">
      <span class="h4 bg-light">　ジャンル編集　</span>
    </div>
  </div>

  <!--ジャンルの編集-->
  <%= form_with model:@genre, url:"/admin/genres/#{@genre.id}", local:true do |f| %>
  <div class="form_group row w-50">
    <label for="genre_name" class="col-md-3">ジャンル名</label>
    <div class="col-md-7">
      <%= f.text_field :name, class: 'genre_name form-control', placeholder: 'ジャンル名' %>
    </div>
    <div class="col-md-2">
      <%= f.submit '変更を保存', class: 'btn btn-success' %>
    </div>
  <% end %>
  </div>

</div>

<!--フッター-->
<%= render '/layouts/footer' %>