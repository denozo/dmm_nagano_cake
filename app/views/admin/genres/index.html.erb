<h1>ジャンル一覧・追加</h1>

<!--form_with ジャンル登録部分-->

<%= form_with model:@genre, url:"/admin/genres", local:true do |f| %>

  <label>ジャンル名</label>
  <%= f.text_field :name %>
  
  <%= f.submit '新規投稿' %>

<% end %>

<!--ジャンル投稿一覧-->
<table>
  <thead>
    <tr>
      <th>ジャンル</th>
      <th></th>
    </tr>
  </thead>
  
  <tbody>
  <% @genres.each do |genre| %>
    <tr>
      <td><%= genre.name %></td>
      <td><%= link_to "編集する", edit_admin_genre_path(genre.id) %></td>
    </tr>
  <% end %>
  </tbody>
</table>
