<div class="container">
  <div class="row justify-content-center">
    <div class="col-9 mb-3">
      <span class="h4 bg-light">　ジャンル一覧・追加　</span>
    </div>
  </div>


  <!--form_with ジャンル登録部分-->
  <%= form_with model:@genre, url:"/admin/genres", local:true do |f| %>
    <div class="form_group row w-50">
      <label for="genre_name" class="col-md-3">ジャンル名</label>
      <div class="col-md-7">
        <%= f.text_field :name, class: 'genre_name form-control', placeholder: 'ジャンル名' %>
      </div>
      <div class="col-md-2">
        <%= f.submit '新規登録', class: 'btn btn-success' %>
      </div>
    </div>
  <% end %>

  <div class="row">
    <!--ジャンル投稿一覧-->
    <table class="table w-50">
      <thead>
        <tr class="table-light">
          <th>ジャンル</th>
          <th></th>
        </tr>
      </thead>

      <tbody>
      <% @genres.each do |genre| %>
        <tr>
          <td><%= genre.name %></td>
          <td><%= link_to "編集する", edit_admin_genre_path(genre.id), class: 'btn btn-success' %></td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>


<!--フッター-->
<%= render '/layouts/footer' %>